{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["src/*"],
      "@graphql/core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*", "app/**/*"],
  "exclude": ["node_modules"]
}
